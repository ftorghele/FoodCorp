<!DOCTYPE html>
<html>
<head>
  <title><%= I18n.t 'application.title'  %> </title>
  <%= stylesheet_link_tag :all %>
  <%= csrf_meta_tag %>
<!-- ABQIAAAAbJBurE6AcWFl0i1KGIO4ThS_YDogaUe9kD9y-xH7PTIONHSzWRTfCAu0UNLWzcsKyeoVU06m6-q6uw -->
