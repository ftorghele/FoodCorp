		<%= @form_tag.text_field :street_number, :placeholder => "Street Number" %><br />

		<div class="Adress">
			<%= @form_tag.text_field :street, :placeholder => "Street" %><br />
			<%= @form_tag.text_field :zip_code, :placeholder => "Zip Code" %><br />
			<%= @form_tag.text_field :city, :placeholder => "City" %><br />
