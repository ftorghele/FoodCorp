  <script language="Javascript" type="text/javascript">
    //<![CDATA[
      google.load("maps", "true");
    //]]>
  </script>
  <%= javascript_include_tag "jquery.min", "jquery-ui.min", "rails", "jquery.maps", "jquery.cookie", "jquery.timepicker", "jquery.hoverintent", "geo", "foodcorp", "http://www.geoplugin.net/javascript.gp", "jquery-autocomplete/lib/jquery.bgiframe.min", "jquery-autocomplete/lib/jquery.dimensions", "jquery-autocomplete/jquery.autocomplete" %>
</head>
<body>
  <!-- FB Like Button -->
  <script>(function(d, s, id) {
  var js, fjs = d.getElementsByTagName(s)[0];
  if (d.getElementById(id)) return;
  js = d.createElement(s); js.id = id;
  js.src = "//connect.facebook.net/de_DE/all.js#xfbml=1";
  fjs.parentNode.insertBefore(js, fjs);
}(document, 'script', 'facebook-jssdk'));</script>

  <div style='position:absolute; top:10px; right:10px'>
  <%= render 'layouts/user_info' %>
  </div>
  <div id="wrapper">
  <%= render 'layouts/header' %>
  <% if current_user %>
	<%= render "users/user_information", :user => current_user %>
  <% end %>
  <div id="notifications">
    <p class="notice" align="center"><%= notice %></p>
    <p class="alert" align="center"><%= alert %></p>
  </div>
  <div id="main">
    <%= yield %>
  </div>
  <div id="footer">
  	<%= link_to "About", about_path %> -
	<%= link_to "Imprint", imprint_path %> -
	<%= link_to "Terms of service", terms_path %>
  </div>
  </div>
</body>
</html>
