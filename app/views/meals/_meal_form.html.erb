<div id="provide_meal">


<%= form_for @meal do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %><br />
  <%= f.label :description %>
  <%= f.text_field :description %><br />
  
  <%unless @meal.title %>
  <%= f.label :country %>
  <%= f.text_field :country, :value => current_user.country %><br />
  <%= f.label :city %>
  <%= f.text_field :city, :value => current_user.city %><br />
  <%= f.label :zip_code %>
  <%= f.text_field :zip_code, :value => current_user.zip_code %><br />
  <%= f.label :street %>
  <%= f.text_field :street, :value => current_user.street %><br />
  <%= f.label :street_number %>
  <%= f.text_field :street_number, :value => current_user.street_number %><br />
  <%else%>
   <%= f.label :country %>
  <%= f.text_field :country%><br />
  <%= f.label :city %>
  <%= f.text_field :city %><br />
  <%= f.label :zip_code %>
  <%= f.text_field :zip_code  %><br />
  <%= f.label :street %>
  <%= f.text_field :street %><br />
  <%= f.label :street_number %>
  <%= f.text_field :street_number%><br />
  <%end%>
  <%= f.label :time %>
  <%= f.text_field :time, :class => "datepicker" %><br />
  <%= f.label :deadline %>
  <%= f.text_field :deadline, :class => "datepicker" %><br />

  <%= f.hidden_field(:lat) %>
  <%= f.hidden_field(:lon) %>
  
  <%= f.submit 'submit', :class => "submit", :onclick => "return:false;" %>
<% end %>

<div id="map" style="width: 450px; height: 300px"></div>
</div>
