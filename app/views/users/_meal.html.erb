<div class="meal">
  <div class="title"><%= meal.title %></div>
  <div class="description"><%= meal.description %></div>
  <input type="hidden" title="lat" value="<%= meal.lat%>" />
  <input type="hidden" title="lon" value="<%= meal.lon%>" />
  
  <% meal.comments.each do |comment| %>
  	<% if comment.visible == true %>
  		<%= link_to comment.user.first_name+" "+comment.user.last_name, user_path(comment.user_id) %><br>
  		<%= comment.body %>
  	<% end %>
  <% end %>

</div>

