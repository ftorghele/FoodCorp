			<%= @form_tag.text_field :city, :value => current_user.current_user_location.city, :placeholder => "City" %><br />
			<%= @form_tag.text_field :country, :value => current_user.current_user_location.country, :placeholder => "Country" %><br />
		</div>
	<% else %>
