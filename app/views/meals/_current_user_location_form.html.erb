<%= form_for(@current_user_location, :url => meal_action) do |l| %>
	<%= hidden_field_tag 'user_id', current_user.id, :value => current_user.id %>
	<%= l.text_field :street, :placeholder => 'Street' %>
	<%= l.text_field :street_number, :placeholder => 'No.' %>
	<%= l.text_field :zip_code, :placeholder => 'Zip Code' %>
	<%= l.text_field :city, :placeholder => 'City' %><br />
	<%= l.label 'when checked auto-localization is switched off:' %>
	<%= l.check_box :activate %>
	<%= l.label "activate?" %>
	<%= l.submit 'Save', :id => 'current_user_location_submit_button' %>
<% end %>
