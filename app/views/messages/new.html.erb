<h1>New Messages</h1>
<ul class="tabs">
  <li><a href="#New"><%=  I18n.t 'tab.new' %></a></li>
</ul>

<div class="tab_container">
  <div id="New" class="tab_content">
    <%= form_tag(messages_path) do %>
    <p><%= label_tag :receiver %></p>
      <p><%= text_field_tag :receiver %></p>
      <p><%= label_tag :topic %></p>
      <p><%= text_field_tag :topic %></p>
      <p><%= label_tag :body %></p>
      <p><%= text_area_tag :body %></p>

      <%= submit_tag 'submit', :class => "submit" %>
    <% end %>
  </div>
</div>