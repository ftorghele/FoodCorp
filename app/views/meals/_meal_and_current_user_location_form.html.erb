		<%= hidden_field_tag "current_user_locations", "y" %>
		<%= @form_tag.text_field :street_number, :value => current_user.current_user_location.street_number, :placeholder => "Street Number" %><br />

		<div class="Adress">
			<%= @form_tag.text_field :street, :value => current_user.current_user_location.street, :placeholder => "Street" %><br />
