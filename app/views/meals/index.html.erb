<div id="main_header">
  <h3>Eat around your place!</h3>
</div>

<div id="main_body">

<!-- <h2><% unless user_signed_in? %>The worldâ€˜s most awesome cooking community. <%= link_to 'Take a tour!', tour_path %><% end  %></h2> -->

<div id="currentUserLocation">
  <p>Save your current position for further visits</p>
  <% if current_user %>
    
    <% if current_user.current_user_location_id %>
      <%= form_for(@current_user_location, :controller => 'Meals', :action => 'create_current_user_location') do |l| %>
        <%= hidden_field_tag 'user_id', current_user.id, :value => current_user.id %>
        <%# label_tag 'Street' %>
        
      <% end %>
    <% else %>
      <%= form_tag(create_current_user_location_path) do %>
        <%= hidden_field_tag 'user_id', current_user.id, :value => current_user.id %>
        
      <% end %>
    <% end %>
  <% end %>
</div>

<div id="mealfind">You are in <span id="currentLocation"></span></div>

<%= form_tag(ajax_updatemap_path, :remote => true, :id => "address", :name => "address") do %>
  <%= text_field_tag :searchLocation, @storred_search_location, :placeholder => 'enter your location...' %>
  Radius: <%= select_tag :searchRadius, options_for_select([ 5, 10, 15, 20 ], @storred_search_radius), :class => "hoverSelect" %> km,
  <%= hidden_field_tag(:searchLat) %>
  <%= hidden_field_tag(:searchLon) %>
  Date: <%= text_field_tag :time , params[:date], :class => "datepickeronly"  %>
  <%= image_submit_tag("change.png", :id => :searchSubmit) %>
<% end %>

  <div id="home_wrapper">
    <div id="map" style="height:350px; width: 370px; margin: 0 0 10px 30px" class="float_left"></div>
		<div id="meals_distance_stream"></div>
    <div class="clr"></div>
  </div>

<div class="clr"></div>
</div>
